# Environment Configuration
ENVIRONMENT=development  # development atau production

# Server Configuration
PORT=8080

# Database Configuration (Neon atau local Postgres)
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=project_zero
DB_PORT=5432
DB_SSL_MODE=disable  # production: require

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# JWT Secret
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# HTTPS/TLS Configuration (PRODUCTION ONLY)
# Path ke SSL certificate files
TLS_CERT_FILE=/path/to/cert.pem
TLS_KEY_FILE=/path/to/key.pem

# CORS Configuration (PRODUCTION ONLY)
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
